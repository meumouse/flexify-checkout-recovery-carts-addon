{
    "name": "meumouse/fc-recovery-carts",
    "description": "Addon para o Flexify Checkout que permite recuperar carrinhos abandonados no WooCommerce.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0",
        "peppeocchi/php-cron-scheduler": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "MeuMouse\\Flexify_Checkout\\Recovery_Carts\\": "inc/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer dump-autoload -o"
        ],
        "post-update-cmd": [
            "@composer dump-autoload -o"
        ]
    }
}
